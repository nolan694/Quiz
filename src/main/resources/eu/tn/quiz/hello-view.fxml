<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="eu.tn.quiz.controller.CalculatorController">
  <padding>
    <Insets top="20" right="20" bottom="20" left="20"/>
  </padding>

  <HBox spacing="10">
    <TextField fx:id="number1Field" promptText="Nombre 1" />
    <TextField fx:id="number2Field" promptText="Nombre 2" />
  </HBox>

  <HBox spacing="10">
    <Button text="+" onAction="#handleAdd" />
    <Button text="-" onAction="#handleSubtract" />
    <Button text="×" onAction="#handleMultiply" />
    <Button text="÷" onAction="#handleDivide" />
  </HBox>

  <Label text="Résultat :" />
  <Label fx:id="resultLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
</VBox>
